@model List<Bloggie.Models.Domain.Tag>
@{
}
<div class="py-3 bg-light border-bottom shadow-sm">
    <div class="container">
        <h1 class="text-center fw-bold text-primary">📑 Show All Tags</h1>
        <p class="text-center text-muted">Admin Functionality - Manage blog tags easily</p>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body">
                <h4 class="card-title mb-4 fw-semibold text-secondary">Tag List</h4>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-primary text-dark">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Display Name</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tag in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@tag.Id</td>
                                    <td>@tag.Name</td>
                                    <td>@tag.DisplayName</td>
                                    <td>
                                        <a asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-success mx-4">Edit</a>
                                        <button class="btn btn-secondary">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center rounded-3 shadow-sm">
            No tags found. Please add some tags to display.
        </div>
    }
</div>
