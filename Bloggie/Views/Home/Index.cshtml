@model List<Bloggie.Models.Domain.BlogPost>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
	<div class="row align-items-center g-5 py-5">
		<div class="col-12 col-lg-6">
			<h1 class="display-5 fw-bold lh-1 mb-3">
				Bloggie -  The Dev Blog Platform
			</h1>
			<p class="lead justify-content-evenly">
				Bloggie is the ultimate blogging platform for developers. Share your knowledge, insights, and experiences with a vibrant community of tech enthusiasts. Whether you're a seasoned developer or just starting out, Bloggie provides the perfect space to express your ideas and connect with like-minded individuals.
				Want to read the latest articles? Join the bloggie community today!
			</p>
		</div>
        

		<div class="col-12 col-lg-6">
			<img src="https://images.pexels.com/photos/69432/pexels-photo-69432.jpeg" alt="Webimg" class="d-block mx-lg-auto img-fluid" width="500"/>
		</div>
	</div>
</div>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-6">
			@if (Model != null && Model.Any())
			{
				foreach (var blogPost in Model)
				{
					<div class="mb-5 bg-light box-shadow p-4 rounded-3">
						<img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading" class="mb-2 d-block img-fluid rounded-3"/>
                        
						<h2 class="mb-4">@blogPost.Heading</h2>
						<p class="mb-4">
							Author : @blogPost.Author<br/>
							Published Date : @blogPost.PublishedDate.ToShortDateString()
                            
							<p class="mb-4">
								@foreach (var tag in blogPost.Tags)
								{
									<span class="badge bg-secondary me-1">@tag.Name</span>
								}
							</p>
                            
							<p class="mb-4">
								@blogPost.ShortDescription
							</p>
							<a class="btn btn-dark " asp-area="" asp-controller="Blogs" asp-action="Index" asp-route-urlHandle="@blogPost.UrlHandle">Read More</a>
						</p>
					</div>
				}
			}
		</div>

	</div>

</div>
